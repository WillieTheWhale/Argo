# Argo Phase 3 Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=8080

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/argo_db
# For production with SSL:
# DATABASE_URL=postgresql://username:password@host:5432/argo_db?ssl=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
# For production with auth:
# REDIS_URL=redis://:password@host:6379

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=10

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://argo.ai

# CDN/Storage Configuration
CDN_URL=https://cdn.argo.ai
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=argo-doodles
AWS_REGION=us-east-1

# Content Moderation API
MODERATION_API_KEY=your-moderation-api-key
MODERATION_API_URL=https://api.moderationservice.com/v1/moderate

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# Email Service (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=hello@argo.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_WEBGL_EFFECTS=true
ENABLE_COMMUNITY_GALLERY=true
ENABLE_TIME_BASED_CONTENT=true
ENABLE_ACHIEVEMENTS=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CLIENTS=1000

# Image Processing
MAX_IMAGE_SIZE_MB=5
IMAGE_QUALITY=80
THUMBNAIL_SIZE=400

# Cache Settings
CACHE_TTL_SECONDS=60
CACHE_FEATURED_TTL=300

# Waitlist Integration
WAITLIST_API_URL=https://api.waitlist.com/v1
WAITLIST_API_KEY=your-waitlist-api-key

# Social Media
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
FACEBOOK_APP_ID=your-facebook-app-id

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/argo/app.log

# Performance
ENABLE_COMPRESSION=true
ENABLE_CLUSTERING=false
WORKER_COUNT=4

# Development Tools
ENABLE_SWAGGER_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_S3_BUCKET=argo-backups

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/argo.crt
SSL_KEY_PATH=/etc/ssl/private/argo.key

# Third-party Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# A/B Testing
OPTIMIZELY_SDK_KEY=your-optimizely-key
SPLIT_IO_API_KEY=your-split-io-key

# Feature Specific
DOODLE_EXPIRY_DAYS=30
MAX_REACTIONS_PER_IP=100
FEATURED_REFRESH_HOURS=6

# Admin Settings
ADMIN_EMAIL=admin@argo.ai
ADMIN_PASSWORD_HASH=$2b$10$hashedpasswordhere
ADMIN_DASHBOARD_URL=/admin

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# API Documentation
API_DOCS_URL=/api-docs
API_VERSION=v1